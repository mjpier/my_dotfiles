alias repo='xbps-query -R'
alias local='xbps-query -s'
alias verif-deps='xbps-query -x'
alias update='doas xbps-install -Su'
alias install='doas xbps-install -S'
alias unistall='doas xbps-remove -R'
alias xcache='doas xbps-remove -O'
alias xhuerfanos='doas xbps-remove -o'
alias xsrc-s='() { cd ~/Templates/void-packages/srcpkgs && find $1 && cd ; }'
alias xsrc-pkg='cd ~/Templates/void-packages/ && ./xbps-src binary-bootstrap && ./xbps-src pkg'
alias xsrc-i='() { doas xbps-install --repository=hostdir/binpkgs/$1 ; }'
alias xsrc-i-nonfree='() { doas xbps-install --repository=hostdir/binpkgs/nonfree/$1 ; }'
alias old-kernel='vkpurge list'
alias rm-old-kernel='doas vkpurge rm all'
alias status='doas sv status'
alias status-all='doas sv status /var/service/*'
alias ls-service='cd /etc/sv/ && ls && cd'
alias up='doas sv up'
alias down='doas sv down'
alias restart='doas sv restart'
alias enable-service='() { doas ln -s /etc/sv/$1 /var/service/ ; }'
alias disable-service='doas rm /var/service/'
